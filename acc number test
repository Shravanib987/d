class TestContrafirmAccountValidation(unittest.TestCase):
        def test_multiple_account_numbers_with_commas(self):
            data = {Constants.CONTRAFIRM_ACCOUNT_NUMBER: "1267432, 99993, 22415"}
            stp_flag = validate_contrafirm_account_number(data)
            self.assertFalse(stp_flag)
        def test_multiple_account_numbers_with_semi_colons(self):
            data = {Constants.CONTRAFIRM_ACCOUNT_NUMBER: "1267432; 99993; 22415"}
            stp_flag = validate_contrafirm_account_number(data)
            self.assertFalse(stp_flag)

        def test_single_account_number(self):

            data = {Constants.CONTRAFIRM_ACCOUNT_NUMBER: "1267432"}
            stp_flag = validate_contrafirm_account_number(data)
            self.assertTrue(stp_flag)

        def test_single_account_number_with_special_characters(self):

            data = {Constants.CONTRAFIRM_ACCOUNT_NUMBER: "444-228885"}
            stp_flag = validate_contrafirm_account_number(data)
            self.assertTrue(stp_flag)

        def test_empty_account_number(self):

            data = {Constants.CONTRAFIRM_ACCOUNT_NUMBER: ""}
            stp_flag = validate_contrafirm_account_number(data)
            self.assertTrue(stp_flag)
